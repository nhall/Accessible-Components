	header.news_list_item_header
		h2.news_list_item_heading(itemprop='headline') News Article Title
		div.news_list_item_author(itemprop='author') Author
		div.news_list_item_publish
			time.news_list_item_publish_time(itemprop='datePublished', datetime="2015-12-28") December 28, 2015
	div.news_list_item_body
		figure.news_list_item_figure
			picture.news_list_item_picture
				<!--[if IE 9]>
				<video style="display: none;">
				<![endif]-->
				source(media='(min-width: 980px)', srcset='http://spacehold.it/174x116/1')
